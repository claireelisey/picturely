<!DOCTYPE html>
<html>

    <head>
        <% include ../static/partials/head.ejs %>
    </head>

    <body>

        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <% include ../static/partials/messages.ejs %>

            <h1>Edit Post</h1>

            <form action="/albums/<%= post.albumId %>/posts/<%= post.id %>/update" method="post">
                <div class="form-group">
                    <label for="title">Post title</label>
                    <input value="<%= post.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                    <small class="text-muted" id="captionHelp">caption must be at least 1 or more characters in length.</small>
                </div>
                <div class="form-group">
                    <label for="image">Post body</label>
                    <textarea rows="4" class="form-control" name="image" placeholder="Enter URL"><%= post.image %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>

</html>