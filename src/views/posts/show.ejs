<!DOCTYPE html>
<html>

    <head>
        <% include ../static/partials/head.ejs %>
    </head>

    <body>

        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <div class="post-image-responsive">
                <img src="<%= post.image %>" alt="Post Image" style="width: 100%; height: auto; object-fit: cover; border-radius: 5px;">
            </div>
            
            <h5 class="post-caption-margin"><%= post.caption %></h5>

            <a href="/albums/<%= post.albumId %>/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
            <form style="display:initial" action="/albums/<%= post.albumId %>/posts/<%= post.id %>/destroy" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>

</html>