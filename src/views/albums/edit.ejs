<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <h1>Edit Album</h1>

            <form action="/albums/<%= album.id %>/update" method="post">
                <div class="form-group">
                    <label for="title">Album title</label>
                    <input value="<%= album.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="albumUrl">Cover Image</label>
                    <textarea rows="4" class="form-control" name="albumUrl" placeholder="Enter URL"><%= album.albumUrl %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>