<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
    
        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <h1>Edit Album</h1>

            <img src="<%= album.image %>" alt="Cover Image" style="width: 80px; height: 55px; object-fit: cover; border-radius: 5px;">

            <form action="/albums/<%= album.id %>/update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Album title</label>
                    <input value="<%= album.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="image">Cover image</label>
                    <input value="<%= album.image %>" type="file" class="form-control-image" name="image" placeholder="Upload Image">
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>