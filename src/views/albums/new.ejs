<!DOCTYPE html>
<html>

    <head>
        <% include ../static/partials/head.ejs %>
    </head>

    <body>

        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <% include ../static/partials/messages.ejs %>

            <h1>New Album</h1>

            <form action="/albums/create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Album title</label>
                    <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="image">Cover image</label>
                    <input type="file" class="form-control-image" name="image" placeholder="Upload Image">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>